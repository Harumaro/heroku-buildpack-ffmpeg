#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install ffmpeg"
BUILD_DIR=$1
VENDOR_DIR="vendor"
DOWNLOAD_URL="http://flect.github.io/heroku-binaries/libs/ffmpeg.tar.gz"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
curl -L --silent $DOWNLOAD_URL | tar xz

echo "-----> Install opus"
LIB_DIR=$BUILD_DIR/libopus
PREFIX_DIR=$LIB_DIR/build/

mkdir -p $LIB_DIR
mkdir -p $PREFIX_DIR
cd $LIB_DIR

curl -O http://downloads.xiph.org/releases/opus/opus-1.1.tar.gz
tar -zxvf opus-1.1.tar.gz
cd opus-1.1
./configure --prefix=$PREFIX_DIR
make -s V=0
make install

cd $LIB_DIR
mv build/include $VENDOR_DIR
mv build/lib $VENDOR_DIR
mv build/share $VENDOR_DIR
cd $BUILD_DIR

rm -r libopus

echo "exporting PATH and LIBRARY_PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/ffmpeg.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:$HOME/vendor/ffmpeg/bin"' >> $PROFILE_PATH
echo 'export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:$HOME/vendor/ffmpeg/lib:$HOME/vendor/lib"' >> $PROFILE_PATH
